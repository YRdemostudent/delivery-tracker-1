<div>
  <div>
    <h1>Delivery Tracker</h1>
      <p>Know if something gets lost in the mail.</p>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
     Expecting a package?
    </h2>

    <form action="/insert_delivery" method="post">
      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="arrive_on_box">
          Arrive on
        </label>

        <input type="date" id="arrive_on_box" name="query_arrive_on">
      </div>
      <div>
        <label for="details_box">
          Details
        </label>
        <textarea id="details_box" name="query_details" rows="3"></textarea>
        </div>

      <button>
        Log delivery
      </button>
    </form>
  </div>
</div>

<hr>


<div class="waiting_on">
  <h2>Waiting on</h2>


<div class="received">
  <h2>Received</h2>
  
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Status
        </th>

        <th>
          User
        </th>

        <th>
          Details
        </th>

        <th>
          Arrive on
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_deliveries.each do |a_delivery| %>
      <tr>
        <td>
          <%= a_delivery.id %>
        </td>

        <td>
          <%= a_delivery.description %>
        </td>

        <td>
          <%= a_delivery.status %>
        </td>

        <td>
          <%= a_delivery.user_id %>
        </td>

        <td>
          <%= a_delivery.details %>
        </td>

        <td>
          <%= a_delivery.arrive_on %>
        </td>

        <td>
          <%= time_ago_in_words(a_delivery.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_delivery.updated_at) %> ago
        </td>

        <td>
          <a href="/deliveries/<%= a_delivery.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
